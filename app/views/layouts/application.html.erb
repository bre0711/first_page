<!DOCTYPE html>
<html>
  <head>
    <title>FirstPage</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
      <header class="py-4">
      <div class="container text-center">
        <h1><%= link_to root_path do %><%= image_tag "logo.png" %><% end %></h1>
      </div>
      <nav class="navbar navbar-expand-md navbar-dark bg-dark sticky-top">
        <div class="container">
          <%= link_to root_path do %><div class="navbar-brand">FIRSTPAGE COMPANY</div><% end %>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbar-content" aria-controls="navbar-content"
          aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
          </button>
      <div class="collapse navbar-collapse" id="navbar-content">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item active">
            <%= link_to root_path do %><div class="nav-link">Top</div><% end %>
          </li>
          <li class="nav-item">
            <%= link_to "#" do %><div class="nav-link">Project</div><% end %>
          </li>
          <li class="nav-item">
            <%= link_to "#" do %><div class="nav-link">Company</div><% end %>
          </li>
          <li class="nav-item">
            <%= link_to "#" do %><div class="nav-link">Recruit</div><% end %>
          </li>
        </ul>
        <ul class="navbar-nav">
          <li class="nav-item">
            <%= link_to contacts_new_path do %><div class="nav-link ">Contact</div><% end %>
          </li>
        </ul>
      </div>
      </nav>
    </header>
    <%= yield %>

  </body>
</html>
